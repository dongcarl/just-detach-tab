{
  "manifest_version": 2,
  "name": "Just Detach Tab",
  "version": "0.0.1",
  "description": "Detach tab with customizable keyboard shortcuts.",
  "options_ui": {
      "page": "options.html",
      "browser_style": true
  },
  "developer": {
    "name": "Carl Dong",
    "url": "https://github.com/dongcarl/just-detach-tab"
  },
  "permissions": [
    "tabs"
  ],
  "background": {
      "scripts": ["background.js"]
  },
  "commands": {
    "detach-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space"
      },
      "description": "Detaches active tab"
    }
  },
  "applications": {
    "gecko": {
      "id": "just-detach-tab@carldong.me",
      "strict_min_version": "60.0",
      "update_url": "https://raw.githubusercontent.com/dongcarl/just-detach-tab/master/updates.json"
    }
  }
}
